@using FlashcardsApp.ViewModels;
@model Exam

@{
    int i = 1;

    ViewData["Title"] = "Detail Exam";
}

<div class="container px-3 py-3 pt-md-5 pb-md-4 ">
    <div class="container mt-3">

        <div class="card card-cascade narrower">
            <div class="view view-cascade gradient-card-header green-gradient narrower pb-2 pt-3 mx-4 mb-3">
                <h1 class="text-white mx-3">@Model.Title</h1>

                <h6 class="mb-0 pb-3 pt-2 ml-3" style="float: left">
                    <i class="fas fa-calendar mr-2"></i>
                    @Model.Solved
                </h6>
                <h6 class="mb-0 pb-3 pt-2 mr-3" style="float: right">
                    @Model.Score

                    <i class="fas fa-star mimosa-text"></i>
                </h6>
            </div>

            <div class="px-4 pb-3">
                <div class="table-wrapper">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>
                                    Lp
                                </th>
                                <th>
                                    Term
                                </th>
                                <th>
                                    Definition
                                </th>
                                <th>
                                    UserAnswer
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Questions != null)
                            {  
                                @foreach (var item in Model.Questions)
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@item.Flashcard?.Term</td>
                                        <td>@item.Flashcard?.Definition</td>
                                        <td>@item.UserAnswer</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>
